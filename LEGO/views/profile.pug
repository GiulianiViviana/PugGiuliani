doctype html
html
 head
   title #{title}
   link(rel='stylesheet', href='/css/style.css')
   meta(name="viewport" content="width=device-width, initial-scale=1")
 body
   header.header
         h1 #{title}
   div.profile
     div.profile-image(style=`background: url('/images/${leg.ImgSrc}') top center no-repeat; background-size: cover;`)
     div.profile-details
       h1.profile-name
         | #{leg.Nome} 
       h2.profile-Eta
         | #{leg.Eta}
       p.profile-tema
         | #{leg.Tema}
       p.profile-annouscita
         | #{leg.Anno_Uscita}
       h2.profile-prezzo
         | #{leg.Prezzo}
       a.button.button-linkIstruzioni(href=`${leg.LinkIstruzioni}`)
         | Istruzioni
