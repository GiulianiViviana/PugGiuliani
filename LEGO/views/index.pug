doctype html
html
 head
   title #{title}
   link(rel='stylesheet', href='/css/style.css')
   meta(name="viewport" content="width=device-width, initial-scale=1")
 body
   header.header
         h1 #{title}
   article.container
     each leg in lego
       div.leg
         div.leg-image(style=`background: url('/images/${leg.ImgSrc}') top center no-repeat; background-size: cover;`)
         h2.leg-name
           | #{leg.Nome}
         a(href=`/profile?id=${leg.id}`)
           | Informazioni
