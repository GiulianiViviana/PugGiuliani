doctype html
html
 head
   title #{title}
   link(rel='stylesheet', href='/css/style.css')
   meta(name="viewport" content="width=device-width, initial-scale=1")
 body
   header.header
         h1 #{title}
   article.container
     each lego in lego
       div.lego
         div.lego-image(style=`background: url('/images/${lego.imgSrc}') top center no-repeat; background-size: cover;`)
         h2.lego-name
           | #{lego.Nome}
         a(href=`/profile?id=${lego.id}`)
           | Informazioni
